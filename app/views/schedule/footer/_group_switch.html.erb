<%= form_tag '/get_group', method: 'get', :class => 'form-inline' do %>
  <div class="input-group">
    <%= text_field_tag :group_number, nil, class: 'form-control', value: params[:group_number], tabindex: 1 %>
  </div>
  <%= select_tag(:subgroup_number,
                 options_for_select([['Подгруппа 1', 1], ['Подгруппа 2', 2]], params[:subgroup_number]),
                 class: 'form-control dropdown-toggle',
                 tabindex: 2) %>
  <%= submit_tag 'Показать', class: 'btn btn-lg btn-primary', tabindex: 3 %>
<% end %>
