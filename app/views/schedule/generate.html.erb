<% title "Группа #{params[:group_number]}, подгруппа #{params[:subgroup_number]}" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 hidden-sm" id="filters-sidebar-wrapper">
      <%= render partial: 'filters_sidebar', locals: {subjects_list: @subjects_list, employees_list: @employees_list, auditories_list: @auditories_list } %>
    </div>
    <div class="col-md-10 col-sm-12 pull-right" id="schedule-table-wrapper">
      <%= render partial: 'schedule_table', locals: { schedule_hash: @schedule_hash, current_week: @current_week, current_day: @current_day, current_time: @current_time } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render 'footer' %>
    </div>
  </div>
</div>
